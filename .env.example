# REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Cloudinary (Image Upload)
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OR use AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ===========================================
# Twilio (SMS, WhatsApp)
# ===========================================
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# ===========================================
# Email (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# OR use SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# Admin Notifications
# ===========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_WHATSAPP=+1234567890

# ===========================================
# SMS Provider (twilio, africastalking, mock)
# ===========================================
SMS_PROVIDER=mock

# Africa's Talking (alternative SMS provider for Africa)
AT_API_KEY=your-api-key
AT_USERNAME=your-username
AT_SENDER_ID=your-sender-id

# ===========================================
# WhatsApp (Meta Business API or Twilio)
# ===========================================
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=mock
# Meta WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_API_VERSION=v18.0

# ===========================================
# Mobile Money API
# ===========================================
# MTN MoMo
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MOMO_SUBSCRIPTION_KEY=your-subscription-key
MOMO_API_USER=your-api-user
MOMO_API_KEY=your-api-key
MOMO_ENVIRONMENT=sandbox
MOMO_CALLBACK_URL=http://yourdomain.com/api/payments/webhook/momo

# Airtel Money
AIRTEL_MONEY_API_URL=https://openapi.airtel.africa
AIRTEL_MONEY_CLIENT_ID=your-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-client-secret
AIRTEL_MONEY_CALLBACK_URL=http://yourdomain.com/api/payments/webhook/airtel

# Payment Webhook Secret (for signature verification)
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# Application Settings
# ===========================================
# Cart expiration in days (default: 90 days = 3 months)
CART_EXPIRATION_DAYS=90

# Order number prefix
ORDER_NUMBER_PREFIX=ORD

# Currency
DEFAULT_CURRENCY=XAF

# Delivery fee
DEFAULT_DELIVERY_FEE=1000
FREE_DELIVERY_THRESHOLD=50000

# Upload
MAX_FILE_SIZE=5242880

# CORS (multiple origins separated by comma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Company Info (for invoices/receipts)
# ===========================================
COMPANY_NAME=E-Commerce Store
COMPANY_ADDRESS=Douala, Cameroon
COMPANY_PHONE=+237 6XX XXX XXX

# Frontend URL (for links in notifications)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json
